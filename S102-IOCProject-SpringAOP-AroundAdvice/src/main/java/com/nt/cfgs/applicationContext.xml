<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<!--Target class cfgs -->
	<bean id="bankService" class="com.nt.service.BankServiceImpl" />

	<!--Advice class cfgs -->

	<bean id="pmAdvice"
		class="com.nt.advice.PerformanceMonitoringAdvice" />

	<bean id="logAdvice" class="com.nt.advice.LoggingAdvice" />

	<bean id="cacheAdvice" class="com.nt.advice.CacheingAdvice" />

	<!--ProxyFactotyBean cfgs -->
	<bean id="pfb"
		class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="bankService" />
		<property name="interceptorNames">
			<array>
				<value>cacheAdvice</value>
				<value>logAdvice</value>
				<value>pmAdvice</value>
			</array>

		</property>

	</bean>
</beans>